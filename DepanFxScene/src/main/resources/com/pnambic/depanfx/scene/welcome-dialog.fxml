<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="200"
            fx:controller="com.pnambic.depanfx.scene.DepanFxWelcomeDialog">

   <VBox spacing="10" layoutX="10" layoutY="10" alignment="CENTER"
         AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
         AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10">

      <Label fx:id="welcomeLabel" text="Welcome to DepanFX!" />

      <ImageView fx:id="welcomeImage"
          fitHeight="256" fitWidth="256">
      </ImageView>

      <Button text="Close" onAction="#handleClose"
            cancelButton="true" defaultButton="true"/>

   </VBox>

</AnchorPane>
